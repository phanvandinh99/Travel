@using WebTravelMVC.Models
@model TheLoai
@{
    ViewBag.Title = "Cập nhật thể loại";
    Layout = "~/Areas/Common/Views/Shared/_LayoutCommon.cshtml";
}
@{
    IEnumerable<DanhMuc> listDanhMuc = ViewBag.DanhMuc as IEnumerable<DanhMuc>;
}
<!-- ***** Main Banner Area Start ***** -->
<div class="page-heading about-page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h2>Cập Nhật thể loại</h2>
                    <span>Nhập thông tin đầy đủ bên dưới</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->
<!-- ***** Contact Area Starts ***** -->
<div class="contact-us">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h2>Bạn muốn cập nhật thể loại?</h2>
                    <span>Nội dung thông tin thể loại</span>
                </div>
                @using (Html.BeginForm("CapNhatTheLoai", "TheLoai", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-lg-6" style="display:none">
                            <fieldset>
                                <i>Mã Thể Loại</i>
                                <input name="MaTheLoai" type="text" value="@Model.MaTheLoai" required="">
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <i>Tên Thể Loại</i>
                                <input name="TenTheLoai" type="text" value="@Model.TenTheLoai" required="">
                            </fieldset>
                        </div>
                        <br />
                        <br />
                        <br />
                        <div class="col-lg-6">
                            <fieldset>
                                <i>Thuộc Danh Mục</i>
                                @Html.DropDownListFor(x => x.MaDanhMuc, new SelectList(listDanhMuc, "MaDanhMuc", "TenDanhMuc"), new { @class = "form-control" })
                            </fieldset>
                        </div>
                        <br />
                        <br />
                        <br />
                        <div class="col-lg-6">
                            <button style="width: auto">Cập Nhật</button>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>
<!-- ***** Contact Area Ends ***** -->
<script>
    CKEDITOR.replace("NoiDung");
</script>
